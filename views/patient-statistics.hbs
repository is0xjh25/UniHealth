 <link rel="stylesheet" type="text/css" href= "/css/patient-statistics.css">
 <script src="https://kit.fontawesome.com/74c293aa5a.js" crossorigin="anonymous"></script>
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
 <script src="/UniHealth/public/js/helpers.js"></script>

<div id="main"> 
        <div class = "aboveTable1">
            <i class="fa-solid fa-calendar-days fa-3x" style="color:white ;"></i>
        </div>

        <div class = "aboveTable2">
            <h2>01.03.2022 - 08.03.2022</h2>
        </div>

    <div class="mainTable">
        <table>
            <tr>
                <th>DATE</th>
                <th>Blood glucose level</th>
                <th>Weight</th>
                <th>Dose of insulin taken</th>
                <th>Exercise</th>
            </tr>

            {{#each record}}
                <tr>
                    <td>{{date}}</td>
                    <td>{{record.bloodGlucoseLevelData}}</td>
                    <td>{{record.weightData}}</td>
                    <td>{{record.doesesOfInsulinTakenData}}</td>
                    <td>{{record.exerciseData}}</td>          
                </tr>
            {{/list}}

        </table>
    </div>

</div>